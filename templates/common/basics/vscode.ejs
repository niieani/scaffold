---
to: .vscode/settings.json
---
{
  "editor.formatOnSave": true,
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "npm.packageManager": "yarn",
  "eslint.packageManager": "yarn",
  "eslint.alwaysShowStatus": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "search.exclude": {
    "**/.yarn": true,
    "**/.pnp.*": true,
    "**/dist": true,
  },
  "files.exclude": {
    // hide generated files:
    ".eslintignore": true,
    ".eslintrc.js": true,
    ".prettierignore": true,
    ".editorconfig": true,
    // "tsconfig.json": true,
    "babel.config.js": true,
    "jest.config.js": true,
    "prettier.config.js": true,
    // defaults:
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true
  },
}
